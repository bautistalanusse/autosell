<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head.ejs')%>

<body>
	<!-- Include Header -->
	<% if(locals.mail){ %>
		<%- include('./partials/headerLogueado.ejs') %> 
	<% } else{ %> 
		<%- include('./partials/header.ejs') %>
	<% } %> 

	<!-- /Header -->
	
	<!-- Main Content -->
	<div class="container-fluid">
		<div class="row main-form bg-success text-center">
			<div class="col-md-4 text-center company__info">
				<span class="company__logo">
					<h2><img src="/images/autosell/logo.png" alt=""></h2>
				</span>
			</div>
			<div class="col-md-8 col-xs-12 col-sm-12 login_form ">
				<div class="container-fluid">
					<div class="row">
						<h2>Log In</h2>
					</div>
					<div class="row">
						<form method="POST" class="form-group">
							<div class="row">
								<input type="text" name="mail" id="mail" class="form__input" placeholder="Email">
							</div>
							<div class="row">
								<input type="password" name="contrasena" id="contrasena" class="form__input"
									placeholder="Password">
							</div>
							<div class="row">
								<input type="checkbox" name="rememberme" id="rememberme" class="">
								<label for="rememberme">Remember Me!</label>
							</div>
							<div class="row">
								<input type="submit" value="Sign In" class="btn">
							</div>
						</form>
					</div>
					<div class="row">
						<p>Don't have an account? <a class="link" href="/register">Register Here</a></p>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- include footer -->
	<%- include('./partials/footer.ejs')  %> 
	<!-- /footer -->
</body>

</html>